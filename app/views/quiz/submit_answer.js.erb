$(".result-message").text("<%= @result[:message] %>");

<% if @result[:correct_answer] %>
  html = "<span class='glyphicon glyphicon-ok text-success' aria-hidden='true'></span>"
<% else %>
  html = "<span class='glyphicon glyphicon-remove text-danger' aria-hidden='true'></span>"
<% end %>

$(".result-icon").html(html);