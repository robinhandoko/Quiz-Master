<%= simple_form_for [:admin, @question], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :question, as: :bootsy, class: "bootsy-area" %>

  <%= f.input :answer %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to "Cancel", admin_questions_path, :class => 'btn btn-default' %>
<% end %>
