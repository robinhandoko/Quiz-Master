<div class="page-header">
  <h1>Question</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Question:</strong></dt>
  <dd><%= @question.question %></dd>
  <dt><strong>Possible Answers:</strong></dt>
  <div class="clear"></div>
  <ul class="possible-answer-list">
    <% @question.answers.each do |answer| %>
      <li>
        <%= answer.answer %>
        <% if answer.is_correct %>
          <%= glyph 'ok-sign' %>
        <% else %>
          <%= glyph 'remove-sign' %>
        <% end %>
      </li>
    <% end %>
  </ul>
</dl>

<%= link_to "Back", admin_questions_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_admin_question_path(@question), :class => 'btn btn-default' %>
<%= link_to "Destroy", admin_question_path(@question),
  :method => 'delete',
  :data => { :confirm => "Are you sure want to delete this question?" },
  :class => 'btn btn-danger'
%>
